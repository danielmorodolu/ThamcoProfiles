@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["PageTitle"] = "Sign In";
}

<!-- External Stylesheet -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="auth-container mt-5 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="auth-header text-center mb-4">@ViewData["PageTitle"]</h3>

        <div class="text-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg w-100">
                <i class="bi bi-key"></i> Sign In with Auth0
            </a>
        </div>
    </div>
</div>
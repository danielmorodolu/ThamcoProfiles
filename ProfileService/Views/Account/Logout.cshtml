@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["PageTitle"] = "Sign Out";
}

<!-- External Stylesheet -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="logout-container d-flex flex-column align-items-center mt-5">
    <!-- Page Header -->
    <h3 class="logout-header text-center mb-4">@ViewData["PageTitle"]</h3>

    <!-- User Information -->
    <div class="card shadow-sm p-4 mb-4" style="max-width: 400px; width: 100%;">
        <h5 class="text-center mb-3">User Information</h5>
        <div class="user-info">
            <p><strong>Name:</strong> @ViewData["UserName"]</p>
            <p><strong>Email:</strong> @ViewData["UserEmail"]</p>
        </div>
    </div>

    <!-- Sign Out Action -->
    <div class="logout-actions">
        <button id="confirmLogout" class="btn btn-warning btn-lg w-100 mb-2">
            <i class="bi bi-box-arrow-right"></i> Sign Out
        </button>
        <a href="@Url.Action("Details", "Account")" class="btn btn-secondary btn-lg w-100">
            <i class="bi bi-person-circle"></i> Back to Profile
        </a>
    </div>
</div>

<!-- JavaScript for Logout Confirmation -->
<script>
    document.getElementById("confirmLogout").addEventListener("click", function () {
        if (confirm("Are you sure you want to sign out?")) {
            window.location.href = '@Url.Action("Logout", "Account")';
        }
    });
</script>
@model ProfileService.Models.Profile

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["PageTitle"] = "Confirm Deletion";
    ViewData["Controller"] = "Account";
    ViewData["Action"] = "Delete";
}

<link rel="stylesheet" href="~/css/delete.css" />

<div class="container my-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">Delete Account</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to permanently delete your account?</h4>
            <p class="text-muted mb-4">This action is irreversible.</p>
            <hr />

            <!-- User Details Section -->
            <div class="user-details">
                @if (Model != null)
                {
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">First Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4 fw-bold">Last Name:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4 fw-bold">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 fw-bold">Payment Address:</dt>
                        <dd class="col-sm-8">@Model.PaymentAddress</dd>

                        <dt class="col-sm-4 fw-bold">Phone Number:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                }
                else
                {
                    <p class="text-danger">User details are not available.</p>
                }
            </div>

            <!-- Confirmation Form -->
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a class="btn btn-secondary btn-lg ms-3" asp-action="Details" asp-controller="Account">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
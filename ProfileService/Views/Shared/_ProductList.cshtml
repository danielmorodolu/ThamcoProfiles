@model IEnumerable<ProfileService.Services.Products.ProductDto>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="card-text fw-bold">$@product.Price</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <button class="btn btn-primary w-100" onclick="addToBasket('@product.Id')">Add to Basket</button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No products available at the moment.</p>
}

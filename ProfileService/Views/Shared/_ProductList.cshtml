@model IEnumerable<ProfileService.Services.Products.ProductDto>

@if (Model != null && Model.Any())
{
    <div class="container my-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>
                            <p class="card-text fw-bold">$@product.Price</p>
                        </div>
                        <div class="card-footer bg-light">
                            <button class="btn btn-primary w-100" onclick="addToBasket('@product.Id')">Add to Basket</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <div class="alert alert-info text-center" role="alert">
            No products available at the moment.
        </div>
    </div>
}

<script>
    function addToBasket(productId) {
        alert(`Product with ID ${productId} has been added to your basket.`);
        // Here, you can implement logic to add the product to the basket via an API call or other methods.
    }
</script>

<!-- Optional CSS -->
<style>
    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-footer {
        border-top: 1px solid #f0f4f8;
    }

    .btn-primary {
        background-color: #1e3d58;
        border-color: #1e3d58;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #16314e; /* Darker shade on hover */
    }

    .alert-info {
        font-size: 1.25rem;
        padding: 20px;
    }
</style>
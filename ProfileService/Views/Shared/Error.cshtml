@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="mb-0">Error</h1>
        </div>
        <div class="card-body">
            <h2 class="text-danger">An error occurred while processing your request.</h2>
            @if (Model.ShowRequestId)
            {
                <p class="mt-3">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <hr />
            <h3>Development Mode</h3>
            <p>
                Switching to the <strong>Development</strong> environment will provide detailed information about the error.
            </p>
            <p class="text-danger">
                <strong>Warning:</strong> The <strong>Development</strong> environment should not be enabled for deployed applications. 
                Displaying sensitive information from exceptions can pose security risks.
            </p>
            <p>
                To enable <strong>Development</strong> mode locally, set the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                and restart the application.
            </p>
        </div>
        <div class="card-footer text-end">
            <a href="/" class="btn btn-secondary">Go to Home</a>
        </div>
    </div>
</div>

<!-- Optional CSS -->
<style>
    .card-header {
        font-size: 1.5rem;
    }
    .card-body h2 {
        margin-bottom: 20px;
    }
    .card-footer a {
        padding: 10px 20px;
        font-size: 1rem;
    }
</style>